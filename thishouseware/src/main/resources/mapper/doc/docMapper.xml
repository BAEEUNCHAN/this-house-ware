	<!-- 전체조회 최신순 -->
	<select id="selectDocJoinList" resultType="DocJoinVO">
		SELECT 
		    e.department_no 
		    , d.edms_doc_no
		    , d.title 
		    , e.id 
		    , d.submit_dt
		FROM 
		    edms_doc d
		JOIN 
		    employees e ON d.id = e.id
		ORDER BY 
		    d.submit_dt DESC
		</select>
